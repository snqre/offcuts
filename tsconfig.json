{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"baseUrl": ".",
		"paths": {
			"@common": ["src/common/mod"],
			"@server": ["src/server/mod"],
			"@web-client": ["src/web-client/mod"],
			"@web-component": ["src/web-component/mod"],
			"@web-constant": ["src/web-constant/mod"],
			"@web-hook": ["src/web-hook/mod"],
			"@web-page": ["src/web-page/mod"],
			"@web-server": ["src/web-server/server"],
			"@web-util": ["src/web-util/mod"]
		}
	}
}